{
  "extends": [
    "config:recommended"
  ],
  "repositories": ["pgolpejas/poc-spring-boot-kafka"],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "packageRules": [
    {
      "matchManagers": [
        "docker-compose", 
        "dockerfile",
        "maven",
        "maven-wrapper",
        "helmfile",
        "helm-values",
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
